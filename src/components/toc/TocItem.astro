---
import type { TocHeading } from '~/utils/toc'

interface Props {
  heading: TocHeading
}

const { heading } = Astro.props
const { slug, children, text } = heading
---

<li>
  {
    slug && (
      <a href={`#${slug}`} aria-label={`Scroll to ${text}`}>
        {text}
      </a>
    )
  }
  {
    !!children.length && (
      <ul>
        {children.map((subheading) => (
          <Astro.self heading={subheading} />
        ))}
      </ul>
    )
  }
</li>
